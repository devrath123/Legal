<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    android:background="@android:color/darker_gray"
    android:elevation="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/card_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.example.devrathrathee.legal.utils.RobotoBoldTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Paymt Dt."
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/edit_text_size" />

                <com.example.devrathrathee.legal.utils.RobotoLightTextView
                    android:id="@+id/payment_date_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/edit_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.example.devrathrathee.legal.utils.RobotoBoldTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Mode"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/edit_text_size" />

                <com.example.devrathrathee.legal.utils.RobotoLightTextView
                    android:id="@+id/mode_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/edit_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.example.devrathrathee.legal.utils.RobotoBoldTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Paymt Amt."
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/edit_text_size" />

                <com.example.devrathrathee.legal.utils.RobotoLightTextView
                    android:id="@+id/payment_amount_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/edit_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">

                <com.example.devrathrathee.legal.utils.RobotoBoldTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Remarks"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/edit_text_size" />

                <com.example.devrathrathee.legal.utils.RobotoLightTextView
                    android:id="@+id/remarks_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/edit_text_size" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
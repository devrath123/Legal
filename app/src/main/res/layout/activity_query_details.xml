<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.CounselDetailsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/black"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_background">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:elevation="5dp"
            app:cardCornerRadius="5dp">

            <TextView
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.example.devrathrathee.legal.utils.RobotoBoldTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Customer"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dimen_15sp" />

                    <com.example.devrathrathee.legal.utils.RobotoLightTextView
                        android:id="@+id/customer_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dimen_15sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <com.example.devrathrathee.legal.utils.RobotoBoldTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Phone"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dimen_15sp" />

                    <com.example.devrathrathee.legal.utils.RobotoLightTextView
                        android:id="@+id/phone_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dimen_15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <com.example.devrathrathee.legal.utils.RobotoBoldTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Email"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dimen_15sp" />

                    <com.example.devrathrathee.legal.utils.RobotoLightTextView
                        android:id="@+id/email_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dimen_15sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <com.example.devrathrathee.legal.utils.RobotoBoldTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Date"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dimen_15sp" />

                    <com.example.devrathrathee.legal.utils.RobotoLightTextView
                        android:id="@+id/date_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dimen_15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <com.example.devrathrathee.legal.utils.RobotoBoldTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Quote Type"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dimen_15sp" />

                    <com.example.devrathrathee.legal.utils.RobotoLightTextView
                        android:id="@+id/quote_type_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dimen_15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <com.example.devrathrathee.legal.utils.RobotoBoldTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Status"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dimen_15sp" />

                    <com.example.devrathrathee.legal.utils.RobotoLightTextView
                        android:id="@+id/status_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dimen_15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="15dp">

                    <com.example.devrathrathee.legal.utils.RobotoBoldTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Query"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dimen_15sp" />

                    <com.example.devrathrathee.legal.utils.RobotoLightTextView
                        android:id="@+id/query_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dimen_15sp" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>